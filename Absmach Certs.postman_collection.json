		{
			"name": "OCSP",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// Test that we get a valid OCSP response",
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Response has valid OCSP fields\", function () {",
							"    const jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.have.property('status');",
							"    pm.expect(jsonData).to.have.property('serial_number');",
							"    pm.expect(jsonData).to.have.property('this_update');",
							"    pm.expect(jsonData).to.have.property('next_update');",
							"});",
							"",
							"pm.test(\"OCSP status is valid\", function () {",
							"    const jsonData = pm.response.json();",
							"    // Status should be 0 (Good), 1 (Revoked), or 2 (Unknown)",
							"    pm.expect(jsonData.status).to.be.oneOf([0, 1, 2]);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
